# Environment Variables for Hijab Umar System

# API Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_API_TIMEOUT=10000

# Application Configuration
REACT_APP_NAME="Hijab Umar"
REACT_APP_VERSION=1.0.0

# Currency Configuration
REACT_APP_CURRENCY_SYMBOL=Rs.
REACT_APP_USD_TO_PKR_RATE=280

# Authentication
REACT_APP_JWT_SECRET=your-jwt-secret-key
REACT_APP_SESSION_TIMEOUT=3600000

# Database Configuration (for backend)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=hijab_umar
DB_USER=root
DB_PASSWORD=your-password

# MongoDB Configuration (alternative)
MONGODB_URI=mongodb://localhost:27017/hijab_umar

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Deployment
NODE_ENV=development
PORT=3001